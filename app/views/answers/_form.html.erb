<%= form_for [@question, @answer] do |f| %>

  <%= render 'shared/errors', object: @answer %> 
  
  <div class="mb-4 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="col-span-full">
      <div class="mt-2">
        <%= f.text_area :text, rows: 5, cols: 50, required: true%>
      </div>
    </div>
  </div>
  
  <%= f.submit "Create", class: 'btn-primary' %>
  <%= link_to "Cancel", root_path, class: 'btn-secondary' %>

<% end -%>
